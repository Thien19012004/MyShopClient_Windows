<Application
    x:Class="MyShopClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:MyShopClient.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <conv:FirstImageConverter x:Key="FirstImageConverter" />
            <conv:SafeUriConverter x:Key="SafeUriConverter" />
            <conv:CollectionHasItemsConverter x:Key="CollectionHasItemsConverter" />
            <conv:ImageAtIndexConverter x:Key="ImageAtIndexConverter" />
            <conv:HasMoreThanConverter x:Key="HasMoreThanConverter" />
            <conv:CollectionHasExactlyConverter x:Key="CollectionHasExactlyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
