<UserControl
 x:Class="MyShopClient.Controls.OnboardingOverlay"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d">

    <Grid x:Name="Root" Background="#66000000" Visibility="Collapsed"
 HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Canvas x:Name="Layer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border x:Name="Highlight"
 CornerRadius="10"
 BorderThickness="2"
 BorderBrush="#FF5D5FEF"
 Background="#11FFFFFF" />
        </Canvas>

        <Border x:Name="Card"
 Background="White"
 CornerRadius="12"
 Padding="14"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 Width="360">
            <StackPanel Spacing="10">
                <TextBlock x:Name="TitleText" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" />
                <TextBlock x:Name="BodyText" Opacity="0.8" TextWrapping="Wrap" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <Button x:Name="BackButton" Content="Back" Click="Back_Click" />
                    <Button x:Name="SkipButton" Content="Skip" Click="Skip_Click" />
                    <Button x:Name="NextButton" Content="Next" Click="Next_Click">
                        <Button.Background>
                            <SolidColorBrush Color="#FF5D5FEF" />
                        </Button.Background>
                        <Button.Foreground>
                            <SolidColorBrush Color="White" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
