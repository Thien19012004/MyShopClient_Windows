<Page
    x:Class="MyShopClient.Views.ConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="using:MyShopClient.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ConfigViewModel}"
    mc:Ignorable="d">

    <Grid Background="#FFF5F5F7" Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="4">
            <TextBlock Text="Server Configuration"
                       FontSize="24"
                       FontWeight="SemiBold" />
            <TextBlock Text="Cấu hình địa chỉ API server cho ứng dụng."
                       Opacity="0.7" />
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1"
                    Margin="0,20,0,0"
                    Spacing="12"
                    VerticalAlignment="Top">

            <TextBlock Text="API Base URL" />
            <TextBox Text="{Binding BaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     CornerRadius="4"
                     Padding="10,0"
                     PlaceholderText="https://localhost:5001" />

            <StackPanel Orientation="Horizontal"
                        Spacing="8"
                        Margin="0,16,0,0">
                <Button Content="Test connection"
                        Command="{Binding TestCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
                <Button Content="Save"
                        Command="{Binding SaveCommand}" />
                <Button Content="Back"
                        Command="{Binding BackCommand}" />
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}"
                       Margin="0,12,0,0"
                       TextWrapping="Wrap"
                       Foreground="{Binding IsSuccess, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Green}" />
        </StackPanel>
    </Grid>
</Page>
