<Page
    x:Class="MyShopClient.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MyShopClient.Views"
    xmlns:controls="using:MyShopClient.Controls"
    mc:Ignorable="d">

    <Grid Background="#FFF5F5F7">
        <Grid.ColumnDefinitions>
            <!-- cột sidebar: width phụ thuộc SidebarControl.Width -->
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR DÙNG CHUNG -->
        <views:SidebarControl x:Name="Sidebar"
                              Grid.Column="0"
                              DashboardRequested="Sidebar_DashboardRequested"
                              ProductsRequested="Sidebar_ProductsRequested"
                              OrdersRequested="Sidebar_OrdersRequested"
                              CustomersRequested="Sidebar_CustomersRequested"
                              PromotionsRequested="Sidebar_PromotionsRequested"
                              LogoutRequested="Sidebar_LogoutRequested"
                              ReportsRequested="Sidebar_ReportsRequested"
                              SettingsRequested="Sidebar_SettingsRequested"/>

        <Grid Grid.Column="1">
            <!-- NỘI DUNG TRANG (FRAME CON) -->
            <Frame x:Name="ContentFrame" />

            <!-- overlay for onboarding teaching tips -->
            <controls:OnboardingOverlay x:Name="OnboardingOverlay" />
        </Grid>
    </Grid>
</Page>
