<UserControl
    x:Class="MyShopClient.Views.SidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="230">

    <UserControl.Resources>
        <!-- Brush cho tráº¡ng thÃ¡i active / inactive -->
        <SolidColorBrush x:Key="SidebarActiveBrush" Color="#22FFFFFF" />
        <SolidColorBrush x:Key="SidebarInactiveBrush" Color="Transparent" />
    </UserControl.Resources>

    <!-- Sidebar tá»± chá»‰nh Width, DashboardPage Ä‘áº·t ColumnDefinition.Width="Auto" -->
    <Grid Background="#FF121826">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER + HAMBURGER -->
        <Grid Grid.Row="0"
              Margin="8,12,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- nÃºt hamburger luÃ´n náº±m Ä‘Ã¢y, khÃ´ng bao giá» máº¥t -->
            <Button x:Name="HamburgerButton"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="â˜°"
                    Click="HamburgerButton_Click"
                    Background="#882D3445"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="16"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Center"
                        x:Name="TitlePanel">
                <Ellipse Width="24" Height="24" Fill="#FF5D5FEF"/>
                <TextBlock Text="MyShop"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- MAIN MENU -->
        <StackPanel Grid.Row="1"
                    Margin="10,10,10,10"
                    Spacing="4">
            <TextBlock Text="MAIN MENU"
                       Margin="10,0,0,4"
                       FontSize="11"
                       Foreground="#88FFFFFF"
                       x:Name="MainMenuHeader"/>

            <!-- Dashboard -->
            <Button x:Name="DashboardButton"
                    HorizontalAlignment="Stretch"
                    Margin="5,0"
                    Background="{StaticResource SidebarActiveBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="6"
                    Click="Dashboard_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ "/>
                    <TextBlock Text="Dashboard"
                               x:Name="DashboardText"/>
                </StackPanel>
            </Button>

            <!-- Products -->
            <Button x:Name="ProductsButton"
                    HorizontalAlignment="Stretch"
                    Margin="5,0"
                    Background="{StaticResource SidebarInactiveBrush}"
                    Foreground="#CCFFFFFF"
                    BorderThickness="0"
                    CornerRadius="6"
                    Click="Products_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ“¦"/>
                    <TextBlock Text="Products"
                               x:Name="ProductsText"/>
                </StackPanel>
            </Button>
            <Button x:Name="OrdersButton"
                    HorizontalAlignment="Stretch"
                    Margin="5,0"
                    Background="{StaticResource SidebarInactiveBrush}"
                    Foreground="#CCFFFFFF"
                    BorderThickness="0"
                    CornerRadius="6"
                    Click="Orders_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ“¦"/>
                            <TextBlock Text="Orders"
                               x:Name="OrdersText"/>
                        </StackPanel>   
            </Button>
            <Button x:Name="ReportsButton"
                    HorizontalAlignment="Stretch"
                    Margin="5,0"
                    Background="{StaticResource SidebarInactiveBrush}"
                    Foreground="#CCFFFFFF"
                    BorderThickness="0"
                    CornerRadius="6"
                    Click="Reports_Click">   
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ“¦"/>
                    <TextBlock Text="Reports"
                       x:Name="ReportsText"/>
                </StackPanel>
            </Button>

            <!-- Settings placeholder -->
            <Button x:Name="SettingsButton"
                    HorizontalAlignment="Stretch"
                    Margin="5,0"
                    Background="{StaticResource SidebarInactiveBrush}"
                    Foreground="#CCFFFFFF"
                    BorderThickness="0"
                    CornerRadius="6">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="âš™"/>
                    <TextBlock Text="Settings"
                               x:Name="SettingsText"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- LOGOUT -->
        <Button Grid.Row="2"
                Margin="10,0,10,20"
                Height="38"
                CornerRadius="8"
                HorizontalAlignment="Stretch"
                Click="Logout_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF2D3445"/>
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush Color="White"/>
            </Button.Foreground>

            <!-- icon + text (text sáº½ áº©n khi thu gá»n) -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="8">
                <TextBlock Text="ðŸšª"/>
                <TextBlock x:Name="LogoutText"
                           Text="Log out"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
