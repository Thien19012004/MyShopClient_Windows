<Page
    x:Class="MyShopClient.Views.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:ReportViewModel}">

    <Grid Background="#FFF5F5F7" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Reports"
                   FontSize="24"
                   FontWeight="SemiBold"/>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- GroupBy -->
            <StackPanel x:Name="ReportGroupByPanel" Orientation="Horizontal" Spacing="8" Grid.Column="0">
                <TextBlock Text="Group by:" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding GroupByOptions}"
                          SelectedItem="{Binding SelectedGroupBy, Mode=TwoWay}"
                          DisplayMemberPath="Label"
                          Width="140"/>
            </StackPanel>

            <!-- Date range -->
            <StackPanel x:Name="ReportDateRangePanel" Orientation="Horizontal" Spacing="4" Grid.Column="1">
                <TextBlock Text="From:" VerticalAlignment="Center"/>
                <TextBox Width="110"
                         PlaceholderText="yyyy-MM-dd"
                         Text="{Binding FromDateText, Mode=TwoWay}"/>
                <TextBlock Text="To:" VerticalAlignment="Center" Margin="8,0,0,0"/>
                <TextBox Width="110"
                         PlaceholderText="yyyy-MM-dd"
                         Text="{Binding ToDateText, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Top products/categories -->
            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Column="2">
                <TextBlock Text="Top:" VerticalAlignment="Center"/>
                <TextBox Width="60"
                         Text="{Binding TopText, Mode=TwoWay}"/>
            </StackPanel>

            <Button Grid.Column="3"
                    Content="Apply"
                    Padding="18,6"
                    HorizontalAlignment="Right"
                    Command="{Binding ApplyFilterCommand}"/>
        </Grid>

        <!-- Charts + error -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Error -->
            <TextBlock Grid.Row="0"
                       Margin="0,0,0,8"
                       Foreground="Red"
                       Text="{Binding ErrorMessage}"
                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Charts -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Product/Category sales line chart -->
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="12"
                        Padding="12"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <!-- Header with title and view mode filter -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding SalesChartTitle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <!-- View Mode Filter -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="View:" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
                                <ComboBox ItemsSource="{Binding SalesViewModeOptions}"
                                          SelectedItem="{Binding SelectedSalesViewMode, Mode=TwoWay}"
                                          DisplayMemberPath="Label"
                                          Width="120"
                                          Height="28"
                                          FontSize="12"/>
                            </StackPanel>
                        </Grid>

                        <lvc:CartesianChart
                            Height="400"
                            Series="{Binding ProductSeries}"
                            XAxes="{Binding ProductXAxes}"
                            YAxes="{Binding ProductYAxes}">
                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>

                <!-- Revenue & profit column chart -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="12"
                        Padding="12"
                        Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Revenue and Profit"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <lvc:CartesianChart
                            Height="400"
                            Series="{Binding RevenueSeries}"
                            XAxes="{Binding RevenueXAxes}"
                            YAxes="{Binding RevenueYAxes}">
                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
