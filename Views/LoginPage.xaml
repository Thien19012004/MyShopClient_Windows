<Page
    x:Class="MyShopClient.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodels="using:MyShopClient.ViewModels" 
    d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
    
    mc:Ignorable="d">

    <Grid Background="#FFF5F5F7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left banner -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFAAEFF" Offset="0" />
                    <GradientStop Color="#FF9966FF" Offset="0.5" />
                    <GradientStop Color="#FF5C4DFF" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">
                <TextBlock
                    Text="Welcome"
                    FontSize="42"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <TextBlock
                    Text="Back!"
                    FontSize="42"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Grid>

        <!-- Right login form -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel
                Grid.Row="0"
                Margin="40,40,40,20">
                <TextBlock Text="Login"
                           FontSize="28"
                           FontWeight="SemiBold" />
                <TextBlock Text="Welcome back! Please login to your account."
                           Margin="0,4,0,0"
                           Opacity="0.7" />
                <TextBlock Text="{Binding AppVersionText}"
                           Margin="0,4,0,0"
                           FontSize="12"
                           Opacity="0.6" />
            </StackPanel>

            <!-- Form -->
            <StackPanel
                Grid.Row="1"
                Margin="40,0,40,0"
                VerticalAlignment="Center"
                Spacing="12">

                <!-- Username -->
                <TextBlock Text="User Name" Margin="0,0,0,4" />
                <TextBox
                    Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Height="40"
                    CornerRadius="4"
                    Padding="10,8,10,8" />

                <!-- Password -->
                <TextBlock Text="Password" Margin="0,12,0,4" />
                <PasswordBox
                    x:Name="PasswordBox"
                    Height="40"
                    CornerRadius="4"
                    Padding="10,8,10,8"
                    VerticalContentAlignment="Center"
                    PasswordRevealMode="Hidden"
                    PasswordChanged="PasswordBox_OnPasswordChanged" />


                <!-- Remember me + Forgot -->
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        IsChecked="{Binding RememberMe, Mode=TwoWay}"
                        Content="Remember Me" />

                    <Button
                        Grid.Column="2"
                        Content="Config Server"
                        Command="{Binding OpenConfigCommand}"
                        Background="Transparent"
                        Foreground="#FF5C4DFF"
                        BorderThickness="0" />
                </Grid>

                <!-- Error -->
                <TextBlock
                    Text="{Binding ErrorMessage}"
                    Foreground="Red"
                    Margin="0,4,0,0"
                    TextWrapping="Wrap"
                    Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!-- Login button -->
                <Button
                    Content="Login"
                    Height="40"
                    Margin="0,20,0,0"
                    CornerRadius="20"
                    HorizontalAlignment="Stretch"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF9966FF" Offset="0" />
                            <GradientStop Color="#FF5C4DFF" Offset="1" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>

            <!-- Footer -->
            <StackPanel
                Grid.Row="2"
                Margin="40,20"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="4">
                <TextBlock Text="New User?" />
                <TextBlock Text="Signup" Foreground="#FF5C4DFF" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
